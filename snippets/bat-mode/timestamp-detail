# -*- mode: snippet; require-final-newline: nil -*-
# name: Get detailed timestamp
# key: timestamp-detail
# --
REM http://stackoverflow.com/a/18024049
SETLOCAL enabledelayedexpansion
for /F "tokens=2 delims==" %%i in ('wmic datafile where name^="%file:\=\\%" get LastModified /format:list') do (
    REM timestamp is "YYYYMMDDhhmmss.<fraction>+/-<timedifference to UTC>"
    set timestamp=%%i
)
echo %timestamp%
ENDLOCAL
